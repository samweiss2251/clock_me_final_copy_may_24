###########################################new screen#####################################
<System_Messages>:
    canvas.before:
        Color:
            ##rgba: 52, 168, 177, 0.4
        Rectangle:
            pos: self.pos
            size: self.size
    name: "System_Messages"
    Screen:
        GridLayout:
            cols: 2
            rows: 4
            name: "system_message_top_grid"
            color: 0, 157, 145, 0.8
            size_hint: .5, .1
            pos_hint: {'center_x':.5, 'center_y': .7}
            font_size: self.width/5

            TextInput:
                id: title
                size_hint: (.2, None)
                height: 30
                multiline: False
                text:
                hint_text: 'Title'
                size_hint: .3, .1




            TextInput:
                id: subject
                size_hint: (.2, None)
                height: 30
                multiline: False
                text:
                hint_text: 'Subject'
                size_hint: .3, .1
                #on_text_validate: login_button.focus = True

        Label:
            text: "System Update Message Center"
            color: 0, 157, 145, 0.8
            size_hint: .3, .1
            pos_hint: {'center_x':.5, 'center_y': .9}
            font_size: self.width/5

        TextInput:
            id: message
            size_hint: (.2, None)
            height: 50
            multiline: True
            text:
            hint_text: 'Start Typing The Message'
            size_hint: .5, .3
            pos_hint: {'center_x':.5, 'center_y': .5}
            font_size: self.width/18


        GridLayout:
            cols: 2
            rows: 4
            name: "system_message_grid"
            color: 0, 157, 145, 0.8
            size_hint: .5, .1
            pos_hint: {'center_x':.5, 'center_y': .2}
            font_size: self.width/5

            Button:
                text: "Send Message"
                color: 0,0,0,
                on_press:app.root.current = "main"
                on_press:root.clear_input()
                on_press:root.send_message()
                size_hint: .3, .1


            Button:
                text: "Home"
                color: 0,0,0,
                on_press:app.root.current = "main"
                on_press:root.clear_input()
                size_hint: .3, .1

