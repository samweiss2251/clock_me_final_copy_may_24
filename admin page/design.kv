WindowManager:
    MyClockWidget:
    System_Messages:
    Add_Season_Box:
    Add_User:


#:import math math


[ClockNumber@Label]:
    text: str(ctx.i)
    pos_hint: {"center_x": 0.5+0.42*math.sin(math.pi/6*(ctx.i-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(ctx.i-12))}
    font_size: self.height/16

<MyClockWidget>:
    on_enter:
    name: "main"
    face: face
    ticks: ticks
    FloatLayout:
        id: face
        size_hint: None, None
        pos_hint: {"center_x":0.5, "center_y":0.6}
        size: 0.4*min(root.size), 0.4*min(root.size)
        canvas:
            Color:
                rgb: 0.05,0.05,0.05
            Ellipse:
                size: self.size
                pos: self.pos
        ClockNumber:
            i: 1
        ClockNumber:
            i: 2
        ClockNumber:
            i: 3
        ClockNumber:
            i: 4
        ClockNumber:
            i: 5
        ClockNumber:
            i: 6
        ClockNumber:
            i: 7
        ClockNumber:
            i: 8
        ClockNumber:
            i: 9
        ClockNumber:
            i: 10
        ClockNumber:
            i: 11
        ClockNumber:
            i: 12
    Ticks:
        id: ticks
        r: min(root.size)*0.4/2
        pos_hint: {'center_x': 0.5,'center_y': 0.6}
    MDFloatLayout:
        md_bg_color: "#262626"
        size_hint: 0.15,0.9
        pos_hint: {'center_x': 0.09,'center_y': 0.5}
        radius: 25

